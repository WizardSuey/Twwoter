<h1>Изменение поста</h1>


<%= form_with model: @newtweet, url: edit_tweet_path, data: {turbo: false} do |form| %>
    <%= render "shared/form_errors", form: form %>
    <div class="mb-3">
        
        
        <input readonly type="hidden" <%= form.text_field :user, :value => @newtweet.user, class: 'form-control'%>
        <hr>
        <%= form.text_field :body, class: 'form-control' %><br>
        <div class="mt-3">
            <%= form.submit 'Confim', class: 'btn btn-primary' %>
            
        </div>
     </div>
      
<% end %>
<% if Current.user.email == @newtweet.user %>
    <%= button_to "Delete", edit_tweet_path(@newtweet), method: :delete, title: 'Удалить вопрос', class: 'btn btn-danger' %>
<% end %>